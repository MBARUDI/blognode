<%- include('parciais/head') %>
<body>
    <%- include('parciais/nav') %>

    <main>
        <div class="form-container" style="max-width: 800px; margin: 0 auto;">
            <h2 style="text-align: center; margin-bottom: 2rem;">Criar um Novo Blog</h2>
            <form action="/blogs" method="POST">
                <div class="form-group">
                    <label for="titulo">Título do Blog:</label>
                    <input type="text" id="titulo" name="titulo" required placeholder="Digite o título do seu post...">
                </div>
                
                <div class="form-group">
                    <label for="conteudo">Conteúdo:</label>
                    <textarea id="conteudo" name="conteudo" rows="10" required placeholder="Escreva o conteúdo aqui..."></textarea>
                </div>
                
                <button type="submit" class="btn-submit">Publicar Blog</button>
            </form>
        </div>
    </main>

    <%- include('parciais/footer') %>
</body>
</html>
